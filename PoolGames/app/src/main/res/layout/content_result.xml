<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.developergmail.schultz.nicklas.poolgames.ResultActivity"
    tools:showIn="@layout/app_bar_result">
    <LinearLayout
        android:id="@+id/playerNamesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:orientation="vertical">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Player 1"/>
    <android.support.design.widget.TextInputEditText
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Player 2"/>
        <Button
            android:id="@+id/startPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Play"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1's turn"
            android:id="@+id/playerTurn"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1's:"
            android:id="@+id/player1name"
            android:layout_weight="0.06" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/player1score"
                android:layout_weight="0.06" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 2's:"
                android:id="@+id/player2name"
                android:layout_weight="0.06" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/player2score"
                android:layout_weight="0.06" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 leading with 20points   50 points left"
            android:id="@+id/stats"
            android:layout_weight="0.06" />
        <GridLayout
            android:id="@+id/snookerResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:paddingTop="50dp">
            <ImageButton
                android:id="@+id/Button01"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/red_ball">
                </ImageButton>
            <ImageButton
                android:background="@null"
                android:id="@+id/Button02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/yellow_ball">
            </ImageButton>
            <ImageButton
                android:background="@null"
                android:id="@+id/Button03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/green_ball">
            </ImageButton>
            <ImageButton
                android:background="@null"
                android:id="@+id/Button04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/brown_ball">
            </ImageButton>
            <ImageButton
                android:background="@null"
                android:id="@+id/Button05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/blue_ball">
            </ImageButton>
            <ImageButton
                android:background="@null"
                android:id="@+id/Button06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/pink_ball">
            </ImageButton>
            <ImageButton
                android:background="@null"
                android:id="@+id/Button07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:paddingLeft="10dp"
                android:src="@drawable/black_ball">
            </ImageButton>
        </GridLayout>
        <ImageButton
            android:src="@drawable/next_turn"
            android:id="@+id/nextTurn"
            android:layout_width="50dp"
            android:layout_gravity="bottom|end"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>
